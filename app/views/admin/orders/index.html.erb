<div class="container">
  
  <div class="row mt-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2 class="table-active text-center" style="width:30%">注文履歴一覧</h2>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <table class="table text-center mb-5">
        <thead class="table">
          <tr>
            <th class="table-active" style="width:35%">購入日時</th>
            <th class="table-active" style="width:35%">購入者</th>
            <th class="table-active" style="width:35%">注文個数</th>
          </tr>
        </thead>
        <% @order.each do |order| %>
        <tbody>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id), class:"text-dark"  %></td>
            <td><%= order.name %></td>
            <td>
              <%= order.order_details.sum(:amount) %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <div class="row mx-auto mb-5"><%= paginate @order %></div>
    </div>
  </div>
  
</div>
