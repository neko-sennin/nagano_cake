<div class="container">
  
  <div class="row mt-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2 class="table-active text-center" style="width:30%">商品一覧</h2>
    </div>
    <div class="nav-link">
      <%= link_to new_admin_item_path, class:"nav-link text-dark" do %>
        <i class="fas fa-plus-square"></i>
      <% end %>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <table class="table text-center mb-5">
        <thead class="table">
          <tr>
            <th class="table-active" style="width:15%">商品ID</th>
            <th class="table-active" style="width:50%">商品名</th>
            <th class="table-active" style="width:35%">税抜価格</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id), class:"text-dark" %></td>
            <td><%= item.price.to_s(:delimited) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <div class="row mx-auto mb-5"><%= paginate @items %></div>
    </div>
  </div>
  
</div>
