<div class="container">
  
  <div class="row mt-3">
    <div class="col-sm-8 px-sm-8 offset-sm-1">
      <h2 class="table-active text-center" style="width:25%">商品編集</h2>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-sm-10 px-sm-8 mx-auto mb-5">
      <%= form_with model: @item, url: admin_item_path, local: true do |f| %>
      <table>
        <tr>
          <th><%= f.label "商品画像" %></th>
          <th><%= f.file_field :image, accept: "image", autofocus: true, id:"inputimage" %></th>
        </tr>
        <tr>
          <th><%= f.label "商品名" %></th>
          <td><%= f.text_field :name, autofocus: true, id:"inputlast_name"%></td>
        </tr>
        <tr>
          <th><%= f.label "商品説明" %></th>
          <td><%= f.text_area :introduction, autofocus: true, id:"inputintroduction", style: "height: 15vh;" %></td>
        </tr>
        <tr>
          <th><%= f.label "税抜価格" %></th>
          <td><%= f.text_field :price, autofocus: true, id:"inputprice" %>円</td>
        </tr>
      </table>
        <div class="mb-3"><%= f.submit "変更を保存", class:"btn btn-success" %></div>
      <% end %>
    </div>
  </div>
  
</div>
