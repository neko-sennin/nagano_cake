<div class="container">
  
  <div class="row mt-4 my-3">
    <div class="col-sm-8 px-sm-8 offset-sm-1">
      <h2 class="table-active text-center" style="width:30%">商品新規登録</h2>
    </div>
  </div>
  
  <% flash.each do |message_type, message| %>
    <div><%= message %></div>
  <% end %>
  
  <div class="row">
    <div class="col-sm-10 px-sm-8 mx-auto mb-5">
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
      <table>
        <tr>
          <th class="col-3"><%= f.label "商品画像" %></th>
          <th><%= f.file_field :image, accept: "image/*" %></th>
        </tr>
        <tr>
          <th class="col-3"><%= f.label "商品名" %></th>
          <td><%= f.text_field :name, placeholder:"商品名", class: "form-control my-3" %></td>
        </tr>
        <tr>
          <th class="col-3"><%= f.label "商品説明" %></th>
          <td><%= f.text_area :introduction, placeholder:"ここに説明文を記述します", style: "height: 15vh;", class: "form-control my-3" %></td>
        </tr>
        <tr>
          <th class="col-3"><%= f.label "税抜価格" %></th>
          <td><%= f.text_field :price, placeholder:"1000", class: "form-control my-3" %>円</td>
        </tr>
      </table>
        <div class="col-3 mb-3 my-3"><%= f.submit "変更を保存", class:"btn btn-success" %></div>
      <% end %>
    </div>
  </div>
  
</div>
