<div class="container">
  
  <div class="row mt-4">
    <div class="col-sm-4 px-sm-0 offset-sm-1">
      <h2 class="table-active text-center" style="width:55%">管理者ログイン</h2>
    </div>
  </div>
  
  <% resource = Admin.new unless resource %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row my-4">
    <div class="col-sm-2 px-sm-0 offset-sm-1">
      <%= f.label "メールアドレス" %>
    </div>
    <div class="col-sm-3 px-sm-0">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", size: 50 %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-sm-2 px-sm-0 offset-sm-1">
      <%= f.label "パスワード" %>
    </div>
    <div class="col-sm-3 px-sm-0">
      <%= f.password_field :password, autofocus: true, size: 50 %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-6 offset-sm-1">
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end %>
      <div class="text-center">
        <%= f.submit "ログイン", class:"btn btn-primary px-4 mt-3" %>
      </div>
    </div>
  </div>
  <% end %>
  
</div>
