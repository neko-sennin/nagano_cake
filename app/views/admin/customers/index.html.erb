<div class="container">
  
  <div class="row mt-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2 class="table-active text-center" style="width:30%">会員一覧</h2>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <table class="table text-center mb-5">
        <thead class="table-light">
          <!--↑この指定が効かない-->
          <tr>
            <th class="table-active" style="width:35%">会員ID</th>
            <th class="table-active" style="width:35%">氏名</th>
            <th class="table-active" style="width:35%">メールアドレス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class:"text-dark" %></td>
            <td><%= customer.email %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  
</div>
