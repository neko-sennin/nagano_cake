<div class="container">
  
  <div class="row my-4">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2 class="table-active text-center" style="width:55%"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
    </div>
  </div>
  <%= form_with model: @customer,url: admin_customer_path,method: :patch do |f| %>
    <div class="row my-2">
      <div class="col-3 offset-md-1"><%= f.label "会員ID" %></div>
      <div class="col-3"><%= @customer.id %></div>
    </div>
    <div class="row my-2">
      <div class="col-3 offset-md-1"><%= f.label "氏名" %></div>
      <div class="col-3"><%= f.text_field :last_name, autofocus: true, class: "form-control" %></div>
      <div class="col-3"><%= f.text_field :first_name, autofocus: true, class: "form-control" %></div>
    </div>
    <div class="row my-2">
      <div class="col-3 offset-md-1"><%= f.label "フリガナ" %></div>
      <div class="col-3"><%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %></div>
      <div class="col-3"><%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %></div>
    </div>
    <div class="row my-2">
      <div class="col-3 offset-md-1"><%= f.label "郵便番号" %></div>
      <div class="col-3"><%= f.text_field :postal_code, autofocus: true, class: "form-control" %></div>
    </div>
    <div class="row my-2">
      <div class="col-3 offset-md-1"><%= f.label "住所" %></div>
      <div class="col-5"><%= f.text_field :address, autofocus: true, class: "form-control" %></div>
    </div>
    <div class="row my-2">
      <div class="col-3 offset-md-1"><%= f.label "電話番号" %></div>
      <div class="col-3"><%= f.text_field :telephone_number, autofocus: true, class: "form-control" %></div>
    </div>
    <div class="row my-2">
      <div class="col-3 offset-md-1"><%= f.label "メールアドレス" %></div>
      <div class="col-3"><%= f.email_field :email, autofocus: true, class: "form-control" %></div>
    </div>
    <div class="row my-4">
      <div class="col-10 text-center">
        <%= f.submit "変更を保存", class:"btn btn-success"%>
      </div>
    </div>
  <% end %>
  </div>
  
</div>
