<div class="container">
  
  <div class="row my-4">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2 class="table-active text-center" style="width:25%">マイページ</h2>
    </div>
  </div>
  
  <div class="row my-2">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <h4><strong>登録情報</strong></h4>
    </div>
    <div class="col-sm-4 px-sm-0">
      <%= link_to "編集する", edit_customers_path, class:"btn btn-success px-4 mb-2" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1">
      <table class="table table-bordered border-primary">
        <tr>
          <th class="table-active" style="width:35%">氏名</th>
          <td><%= @customer.last_name + @customer.first_name%></td>
        </tr>
        <tr>
          <th class="table-active" style="width:35%">カナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-active" style="width:35%">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-active" style="width:35%">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-active" style="width:35%">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-active" style="width:35%">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row my-2">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <h4><strong>注文履歴</strong></h4>
    </div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to "一覧を見る", orders_path, class:"btn btn-primary mb-2" %>
    </div>
  </div>
  
</div>
