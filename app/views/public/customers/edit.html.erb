<h2>編集画面</h2>

<%= form_with model: @customer,url: customers_path,method: :patch do |f| %>
  <div>
    <label for="inputlast_name">名</label>
    <%= f.text_field :last_name, autofocus: true, id:"inputlast_name" %>
  </div>
  <div>
    <label for="inputfirst_name">姓</label>
    <%= f.text_field :first_name, autofocus: true, id:"inputfirst_name" %>
  </div>
  <div>
    <label for="inputlast_name_kana">名(カナ)</label>
    <%= f.text_field :last_name_kana, autofocus: true, id:"inputlast_name_kana" %>
  </div>
  <div>
    <label for="inputlast_name_kana">姓(カナ)</label>
    <%= f.text_field :last_name_kana, autofocus: true, id:"inputlast_name_kana" %>
  </div>
  <div>
    <label for="inputpostal_code">郵便番号</label>
    <%= f.text_field :postal_code, autofocus: true, id:"inputpostal_code" %>
  </div>
  <div>
    <label for="inputaddress">住所</label>
    <%= f.text_field :address, autofocus: true, id:"inputaddress" %>
  </div>
  <div>
    <label for="inputtelephone_number">電話番号</label>
    <%= f.text_field :telephone_number, autofocus: true, id:"inputtelephone_number" %>
  </div>
  <div>
    <label for="inputemail">メールアドレス</label>
    <%= f.text_field :email, autofocus: true, id:"email" %>
  </div>
  <div>
    <%= f.submit "更新" %>
  </div>
<% end %>
