<div class="container">
  
  <div class="row my-4">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <h2 class="table-active text-center" style="width:25%">注文履歴一覧</h2>
      <table class="table table-bordered my-5">
        <thead>
          <tr>
            <th class="table-active" style="width:10%">注文日</th>
            <th class="table-active" style="width:30%">配送先</th>
            <th class="table-active" style="width:25%">注文商品</th>
            <th class="table-active" style="width:15%">支払金額</th>
            <th class="table-active" style="width:20%">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @order.each do |order| %>
          <tr>
            <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td class="align-middle">
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %><br>
            </td>
            <td class="align-middle">
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td class="align-middle"><%= order.total_price.to_s(:delimited) %>円</td>
            <td class="align-middle"><%= link_to "表示する", order_path(order), class:"btn btn-primary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
</div>
