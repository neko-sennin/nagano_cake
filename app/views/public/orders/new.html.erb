<div class="container">
  
  <div class="row">
    <div>
      <h2>注文情報入力</h2>
      <%= form_with model: @order, url:order_check_path, local:true do |f| %>
        <h4>支払方法</h4>
          <%= f.radio_button :payment_option, 0, checked: true %>クレジットカード<br>
          <%= f.radio_button :payment_option, 1 %>銀行振込
        <h4>お届け先</h4>
          <%= f.radio_button :address_option, 0, checked: true %>ご自身の住所<br>
          <%= "〒#{current_customer.postal_code} #{current_customer.address}" %><br>
          <%= current_customer.last_name + current_customer.first_name %><br>
          <%= f.radio_button :address_option, 1 %>新しいお届け先<br>
          <div class="field">
            <%= f.label "郵便番号" %>
            <%= f.text_field :postal_code, placeholder: "000000" %>
          </div>
          <div class="field">
            <%= f.label "住所" %>
            <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町０−０" %>
          </div>
          <div class="field">
            <%= f.label "宛名" %>
            <%= f.text_field :name, placeholder: "令和道子" %>
          </div>
        <div class="text-center mt-3"><%= f.submit "確認画面へ進む", class: "btn btn-primary" %></div>
      <% end %>
    </div>
  </div>
  
</div>
