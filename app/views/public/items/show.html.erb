<div class="container mt-5 mb-5">
  <div class="row text-center text-xs-center text-sm-left text-md-left">
    
    <div class="col-xs-12 col-sm-6 col-md-6 mx-auto text-right">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300", class:"rounded" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x300", class:"rounded" %>
      <% end %>
    </div>
  
    <div class="col-xs-12 col-sm-6 col-md-6 item-details mx-auto">
      <h2 class="my-3"><strong><%= @item.name %></strong></h2>
      <h4><%= @item.introduction %></h4>
      <h4 class="my-5">¥<%= @item.price.to_s(:delimited) %><span style="font-size: 15px;"> (税込)</span></h4>
      <h4>
        <%= form_with model: @cart_item, local: true do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <div class="text-center my-3">
            <%= f.select :amount, *[1..30], required: true %>
            <%= f.submit "カートに入れる", class: "btn btn-success" %>
          </div>
        <% end %>
      </h4>
    </div>
  
  </div>
</div>
