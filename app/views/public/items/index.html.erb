<div class="container">
  
  <div class="row my-4">
    <div class="">
      <h2><strong>商品一覧</strong><span style="font-size: 18px;"> (全<%= @items_all.count %>件)</span></h2>
      <div class="row my-4">
        <% @items.each do |item| %>
        <div class="item col-lg-3 my-4">
          <%= image_tag item.get_image(150,150) %>
          <div class="item-body">
            <h4 class="item-title"><%= link_to item.name, item_path(item.id), class:"text-dark" %></h4>
            <p class="item-price">¥<%= item.price.to_s(:delimited) %>(税抜)</p>
          </div>
        </div>
        <% end %>
        <div class="row mx-auto">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
  
</div>
