<div class="container">
  
  <div class="row my-4">
    <div class="">
      <h2><strong>商品一覧</strong><span style="font-size: 18px;"> (全<%= @items_all.count %>件)</span></h2>
      <div class="row my-4">
        <% @items.each do |item| %>
        <div class="item col-lg-3 my-4">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image(150,150) %>
          <% end %>
          <div class="item-body">
            <h4 class="item-title"><%= item.name %></h4>
            <p class="item-price">¥<%= item.price.to_s(:delimited) %>(税抜)</p>
          </div>
        </div>
        <% end %>
      </div>
    </div> 
    <div class="row mx-auto mb-5"><%= paginate @items %></div>
  </div>
  
</div>
